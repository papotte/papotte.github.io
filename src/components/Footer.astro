---
import { Icon } from 'astro-icon/components';

const { links } = Astro.props;
---

<footer id="footer">
	<div class="wrapper justify-center gap-x-4 gap-y-8 md:w-full md:justify-between lg:gap-y-16">
		<div class="wrapper justify-center text-sm text-tertiary-600">
			<span>Â© All rights are reserved</span>
			<span>2023</span>
			<span class="gap-1">
				Made with
				<Icon name="ic:round-favorite" class="h-6 w-6 text-accent" /> by <a href="https://github.com/papotte"
					>Ross Bermudez</a
				>
				with
				<Icon name="logos:astro" class="h-6 w-6" />
			</span>
		</div>
		<div class="wrapper w-full justify-center gap-x-4 md:w-auto">
			{
				links.map((l) => (
					<a href={l.href} aria-label={l.name}>
						<Icon name={l.icon} class="h-10 w-10" />
					</a>
				))
			}
		</div>
	</div>
</footer>

<style>
	.wrapper {
		@apply flex flex-row flex-wrap md:flex-nowrap;
	}

	span {
		@apply flex flex-row items-center whitespace-nowrap after:mx-2 after:content-['|'] last:after:content-[''];
	}

	a {
		@apply text-primary;
	}
</style>
