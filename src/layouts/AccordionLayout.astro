---
import { Icon } from 'astro-icon/components';
const { title, icon } = Astro.props;
import BaseLayout from './BaseLayout.astro';
---

<BaseLayout>
	<li class="relative border-b border-text/30" x-data="{selected:null}">
		<button type="button" class="w-full px-3 py-3 text-left" @click="selected !== 1 ? selected = 1 : selected = null">
			<div class="flex items-center justify-between">
				<h4 class="flex items-start justify-center font-mono text-2xl text-text/80 hover:text-text/95">
					<Icon name={icon} class="mr-4 h-8 w-8" />
					{title}
				</h4>

				<Icon
					name="ic:baseline-arrow-drop-down"
					class="h-5 w-5"
					x-bind:style="selected ==1 ? 'rotate:'+' 180deg' : ''"
				/>
			</div>
		</button>

		<div
			class="relative max-h-0 overflow-hidden transition-all duration-700"
			style=""
			x-ref="container1"
			x-bind:style="selected == 1 ? 'max-height: ' + $refs.container1.scrollHeight + 'px' : ''"
		>
			<div class="px-2 py-4 text-text/60">
				<slot />
			</div>
		</div>
	</li>
</BaseLayout>
